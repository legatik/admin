<div class="container">
	<form id="registration-form" class="form-horizontal col-lg-4 col-lg-offset-4 auth-form" action="/auth/local" method="POST" enctype="multipart/form-data" data-validate="parsley" data-trigger="change">
		<div class="form-group">
			<label class="col-lg-2 control-label auth-label" for="inputEmail">
				Email
			</label>
			<div class="col-lg-9">
				<input type="text" name="username" id="inputEmail" class="form-control"  placeholder="Email" data-trigger="focusin focusout" data-required="true"/>
			</div>
			<div class="alert-email alert alert-danger hide">This user exists</div>
		</div>
		<div class="form-group">
			<label class="col-lg-2 control-label auth-label" for="inputPassword">
				Password
			</label>
			<div class="col-lg-9">
				<input type="password" name="password"  id="inputPassword" class="form-control"  placeholder="Password" data-trigger="focusin focusout" data-required="true" />
			</div>
		</div>
		<div class="col-lg-offset-2 col-lg-9">
			<button id="login-submit" class="btn btn-primary" type="submit">Sign in</button>
		</div>
	</form>
</div>

